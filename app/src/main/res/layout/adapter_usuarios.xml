<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNomeUsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Usuário"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <CheckBox
        android:id="@+id/cbAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrador"
        android:layout_below="@+id/tvNomeUsu"
        android:layout_alignParentStart="true" />
    <CheckBox
        android:id="@+id/cbAcessoComand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acesso Ações"
        android:layout_alignBaseline="@+id/cbAdmin"
        android:layout_alignBottom="@+id/cbAdmin"
        android:layout_toEndOf="@+id/cbAdmin" />
    <CheckBox
        android:id="@+id/cbAcessoJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acesso Agenda"
        android:layout_alignBaseline="@+id/cbAcessoComand"
        android:layout_alignBottom="@+id/cbAcessoComand"
        android:layout_toEndOf="@+id/cbAcessoComand" />


    <!--android:layout_toStartOf="@+id/main_line_delete"-->

</RelativeLayout>